#pragma kernel CSMain1
 
RWStructuredBuffer<int> buffer1;
 
[numthreads(4,1,1)]
 
void CSMain1(int3 threadID : SV_GroupThreadID, int3 dispatchID : SV_DispatchThreadID)
{
    buffer1[dispatchID.x] = threadID.x;
}
